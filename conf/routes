# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.home

GET     /game                				controllers.HomeController.game
GET    	/game/play/new							controllers.HomeController.newGame
GET     /game/play/move/:from/:to		controllers.HomeController.move(from: String, to: String)
GET     /game/play/undo             controllers.HomeController.undo
GET     /game/play/redo             controllers.HomeController.redo

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
